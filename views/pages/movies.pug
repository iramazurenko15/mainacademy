extends ../main

block title
	| Фильмы
block content
	.movies-block.movies-page.container
		h1.style-title-1 Популярные фильмы онлайн
		.all-movies
			mixin movieCard(movie)
				a.item.movie-item.info-tooltip(href=/movie/ + movie.id)
					img(src=movie.poster,alt=movie.alt)
					h3.movie-title= movie.title
					p= movie.year + ", " + movie.genre
					span.tooltiptext= movie.description.slice(0,380) + '...'
			for movie in movies
				+movieCard(movie)
		button#load-more.btn.btn-default Загрузить еще