extends ../main

block title 
	| #{movie.title}

block content
	.container.movies-block
		.single-poster.col-md-3.col-sm-4
			img(src=movie.poster,alt=movie.alt)
		.single-info.col-md-9.col-sm-8
			h1= movie.title
			p.movie-year= movie.year + ", " + movie.genre
			p= movie.description
		.single-video.col-md-12
			iframe(width="560" height="315" src=movie.video frameborder="0" allowfullscreen)
			


