extends ../main

block title
	| Главная страница
block content
	.owl-carousel.owl-theme.main-slider
		.item
			img(src='/img/hotel-artemida.jpg')
		.item
			img(src='/img/shpion-kotoryiy-menya-kinul.jpg')
		.item
			img(src='/img/vo-vlasti-stihii.jpg')
	.container
		.movies-block
			h1.style-title-1 Фильмы
			.owl-carousel.owl-theme.item-slider
				mixin movieCard(movie)
					a.item(href=/movie/ + movie.id)
						img(src=movie.poster,alt=movie.alt)
						h3.movie-title= movie.title
						p= movie.year + ", " + movie.genre
				for movie in movies
					+movieCard(movie)
